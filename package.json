{
  "name": "CPP-Compiler",
  "displayName": "CPP_",
  "publisher": "bleastProgram",
  "icon": "./CPPLOGO.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "homepage": "https://github.com/BleastT/CPP_extension/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/BleastT/CPP_extension/issues",
    "email": "ayassinee2007@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BleastT/CPP_extension"
  },
  "author": {
    "name": "bleastProgram"
  },
  "description": "An extension for compiling CPP and C projects. Supports debug and release mode with as many CPP or C files as you want",
  "version": "1.5.5",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords" : [
    "cpp",
    "runner",
    "compile",
    "compiler",
    "c++",
    "c",
    "gcc",
    "clang++",
    "clang",
    "programming",
    "debugger",
    "g++",
    "gcc",
    "gdb",
    "hpp",
    "h"
  ],
  "activationEvents": ["onLanguage:cpp", "onLanguage:c", "onCommand:CPP-Compiler.activate"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CPP-Compiler.run",
        "title": "CPP_ : Compile project"
      },
      {
        "command": "CPP-Compiler.restart",
        "title": "CPP_ : ReCompile project"
      },
      {
        "command": "CPP-Compiler.activate",
        "title": "CPP_ : Activate Extension"
      },
      {
        "command": "CPP-Compiler.configure",
        "title": "CPP_ : Configure the project"
      }
    ]
  },
  "debuggers" : [{
    "type" : "gdb",
    "program" : "${workspaceFolder}/buid/out/sfmltest.exe"
  }],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "fs-extra": "^11.1.0",
    "js-yaml": "^4.1.0"
  }
}

