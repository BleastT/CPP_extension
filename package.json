{
  "name": "CPP-Compiler",
  "displayName": "CPP_",
  "publisher": "bleastProgram",
  "private": true,
  "icon": "./CPPLOGO.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "description": "An extension for compiling cpp projects. Supports debug and release mode with as many cpp files as you want",
  "version": "1.4.3",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords" : [
    "cpp",
    "runner",
    "compile",
    "compiler",
    "c++",
    "programming",
    "debugger",
    "g++",
    "gdb",
    "hpp",
    "h"
  ],
  "activationEvents": ["onLanguage:cpp"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CPP-Compiler.run",
        "title": "CPP_ : Compile project"
      },
      {
        "command": "CPP-Compiler.restart",
        "title": "CPP_ : ReCompile project"
      },
      {
        "command": "CPP-Compiler.execute",
        "title": "CPP_ : Run project"
      },
      {
        "command": "CPP-Compiler.configure",
        "title": "CPP_ : Configure the project"
      }
    ]
  },
  "debuggers" : [{
    "type" : "gdb",
    "program" : "${workspaceFolder}/buid/out/sfmltest.exe"
  }],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "fs-extra": "^11.1.0",
    "js-yaml": "^4.1.0"
  }
}

